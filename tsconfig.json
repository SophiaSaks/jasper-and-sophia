{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/theme/*": [
        "./theme/*"
      ],
      "@/styles/*": [
        "./styles/*"
      ],
      "@/assets/*": [
        "./assets/*"
      ],
      "@types/*": [
        "./types/*"
      ]
    }
  },
  "include": [
    "src",
    "src/theme/**/*",
    "src/components/**/*",
    "src/assets/**/*",
    "src/types/**/*",
  ]
}